.welcome-panel {
	width: 500px;
	display: block;
	margin: 0 auto;
	padding: 0;
	margin-top: 5%;
}

.welcome-panel h1:first-of-type {
	font-family: Bebas, Tahoma, serif;
	display: block;
	color: #FFF;
	text-align: center;
	font-weight: normal;
	font-size: 4em;
}

.welcome-panel-image {
	background: url('<%= asset_path("onquiry-login-image.png") %>') no-repeat;
	width: 573px;
	height: 210px;
	margin-top: -30px;
	margin-bottom: -45px;
	margin-left: -15px;
	overflow: auto;
}
