$green: #13AD5C;
$header-size: 60px;
$footer-size: 10px;
$logo-color: #0E8144;

/**
 *   font-face declarations
 */
@font-face {
	font-family: 'Pacifico';
	src: url('<%= asset_path("Pacifico.ttf") %>');
}

@font-face {
	font-family: 'Bebas';
	src: url('<%= asset_path("bebas.ttf") %>');
}

@font-face {
	font-family: 'League Gothic Regular';
	src: url('<%= asset_path("LeagueGothic-Regular.otf") %>');
}

.alert-logo {
	font-size: 3em;
}

.alert {
	border-radius: 0;
}

.alert-wrapper ul li {
	list-style-type: none;
}

.alert-wrapper ul {
	margin-top: 10px;
}

.alert-content-wrapper {
	text-align: center;
}

.ajax-loading {
	display: block;
	width: 100px;
	height: 100px;
	background-position: center;
	background-image: url("<%= asset_url('ajax-loader.gif') %>");
	background-repeat: no-repeat;
}

header.main {
	width: 100%;
	height: 48px;
	background-color: #2ECC71;
	position: fixed;
	left: 0;
	top:0;
	display: block;
	z-index: 999;
}

header.main .logo {
	background: url("<%= asset_url('onquiry-logo.png'); %>");
	left: 3%;
	top: 5px;
	width: 115px;
	height: 65px;
	z-index: 1000;
	position: fixed;
}

aside.main {
	width: 200px;
	height: 100%;
	display: block;
	top: 48px;
	position: fixed;
	background-color: #555555;
	padding: 5px;
	padding-top: 30px;
}

aside.main hr {
	border-color: #777777;
}

nav.first-group, nav.first-group a {
	color: #BBBBBB;
}

nav.first-group ul {
	list-style-type: none;
}

nav.first-group ul li {
	margin: 10px;
}

.user-icon {
	background: url("<%= asset_url('user-icon.png'); %>") no-repeat;
	width: 60px;
	height: 60px;
	display: inline-block;
	vertical-align: top;
}

.profile-box-1 {
	display: inline-block;
	width: 120px;
	height: 60px;
	color: #FFF;
	vertical-align: top;
	padding: 25px 15px;
}

article.main {
	top: 48px;
	left: 200px;
	position: absolute;
	background-color: #EEEEEE;
	width: 100%;
}

article.main a {
	color: #26AD5F;
}