$green: #13AD5C;
$header-size: 60px;
$footer-size: 10px;
$logo-color: #0E8144;

/**
 *   font-face declarations
 */
@font-face {
	font-family: 'Pacifico';
	src: url('<%= asset_path("Pacifico.ttf") %>');
}

@font-face {
	font-family: 'Bebas';
	src: url('<%= asset_path("bebas.ttf") %>');
}

@font-face {
	font-family: 'League Gothic Regular';
	src: url('<%= asset_path("LeagueGothic-Regular.otf") %>');
}

blockquote {
	font-size: 2em;
}

header.main {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height:  $header-size;
	display: block;
	background-color:  $green;
	z-index: 999;
}

header.main .logo {
	margin-left: 10%;
	margin-top: 5px;
	height: 50px;
	width: 120px;
	padding-top: 2px;
	text-align: center;
	background-color:  $logo-color;
	color: #FFF;
	font-size: 1.9em;
	border-radius: 10px 0 10px;
	font-family: Pacifico, Georgia, sans-serif;
	float: left;
}

html, body {
	margin: 0;
	padding: 0;
	height: 100%;
}

.wrapper {
	min-height: 100%;
	height: 100%;
	position: relative;
	padding-top:  $header-size;
}

.wrapper > nav {
	position: fixed;
	min-height: 100%;
	font-size: 1.2em;
	width: 20%;
	max-width: 20%;
	padding-left: 10%;
	padding-top: 2%;
}

.wrapper > nav > div {
	width: 100%;
	float: left;
	margin-bottom: 0.5em;
}

.left-nav {
	color: #555;
	height: 1.5em;
	text-decoration: none;
	word-spacing: 0;
}

.left-nav:hover {
	color:  $logo-color;
}

.left-nav:active {
	top: 2px;
	position: relative;
}

.wrapper > article {
	width: 80%;
	margin-left: 20%;
	float: left;
	//background-color: #fbfbfb;
}

.wrapper > footer {
	font-family: Tahoma, "Times New Roman", serif;
	font-size: 0.8em;
	position: fixed;
	padding: 0 10%;
	bottom: 0;
	height: 35px;
	line-height: 35px;
	width: 100%;
	background-color: #333;
	color: #FFF;
	clear: both;
}


.alert-logo {
	font-size: 1.5em;
	float: left;
	padding-right: 10px;
	margin-top: -5px;
}

.alert-container {
	width: 50%;
	margin: inherit;
}

.alert-wrapper ul li {
	list-style-type: none;
}

.alert-wrapper {
	width: 100%;
	margin: 0 auto;
}

#ajax-loading {
	display: block;
	width: 100px;
	height: 100px;
	background-position: center;
	background-image: url("<%= asset_url('ajax-loader.gif') %>");
	background-repeat: no-repeat;
}
