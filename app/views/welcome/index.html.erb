<%= render_alert(@new_user) %>
<div class="form-container-medium">
	<blockquote>
		“Any fool can know. The point is to understand.”
	</blockquote>
	― Albert Einstein
</div>

<div class="form-container-medium">
	<h1>Create an Account</h1>

	<%= form_for @new_user, url: { action: :register }, method: :post do |f| %>
	<%= f.text_field :first_name, required: true, placeholder: 'First Name', class: 'form-control', value: '' %>
	<%= f.text_field :last_name, required: true, placeholder: 'Last Name', class: 'form-control', value: '' %>
	<%= f.text_field :email, required: true, placeholder: 'Email', class: 'form-control', value: '' %>
	<%= f.password_field :password, required: true, placeholder: 'Password', class: 'form-control' %>

	<%= submit_tag "Create Account", class: 'btn btn-success' %>
	<% end %>
</div>

<div class="form-container-medium">
	<h1>Login</h1>

	<%= form_for :login, url: { action: :login }, method: :post do |f| %>
	
		<%= f.text_field 'email', required: true, placeholder: 'Email', class: 'form-control' %>
		<%= f.password_field 'password', required: true, placeholder: 'Password', class: 'form-control' %>
		<%= submit_tag "Login", class: 'btn btn-success'%>
		
	<% end %>
</div>

